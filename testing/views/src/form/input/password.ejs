<% 
if(!locals.id){
    console.error("All your 'input:password' need an id.")
}
//format ejs option => {id : '', options : [['property', 'value']...]}
%>
<input 
    type="password" 
    name="<%=locals.name ? locals.name : id%>" 
    id="<%=id%>" 
    <% if(locals.options){
        let res;
        for(const [property, value] of options){
            res=`${property}=${value}`
        %>
        <%=res%>
    <%}}%>
>