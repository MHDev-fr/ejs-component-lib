    console.error("All your 'input:text' need an id.")
}
const findProp = (prop) => {
    let propValue;
    if(locals[prop])
        return propValue = locals[prop];
    const haveNameInOption = locals.options.forEach(
        (option, index) => {
            if(option[0] === prop){
                return propValue = option[1]
            }
        })
    if(propValue)
        return propValue
    return null;
}
const shortFinding = (prop, def) => findProp(prop) ? findProp(prop) : def
