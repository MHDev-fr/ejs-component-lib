<% 
if(!locals.id){
    console.error("All your 'input:text' need an id.")
}
let name;
const findName = () => {
    if(locals.name)
        return name = locals.name;
    const haveNameInOption = locals.options.forEach(
        (option, index) => {
            if(option[0] === 'name'){
                return name = option[1]
            }
        })
    if(name)
        return name
    return null
}
findName()
//format ejs option => {id : '', options : [['property', 'value'],['property', 'value']...]}
%>
<input 
    type="text"
    name="<%=name ? name : id%>" 
    id="<%=id%>" 
    <% if(locals.options){
        let res;
        for(const [property, value] of options){
            res=`${property}=${value}`
        %>
        <%=res%>
    <%}}%>
>